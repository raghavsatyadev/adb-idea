<idea-plugin url="https://github.com/raghavsatyadev/adb-idea">
    <id>io.github.raghavsatyadev.adbidea</id>
    <name>ADB Idea</name>
    <vendor url="https://github.com/raghavsatyadev">Raghav Satyadev</vendor>
    <extensions defaultExtensionNs="com.intellij">
        <!-- Notification group for logging -->
        <notificationGroup displayType="NONE" id="ADB Idea (Logging)" isLogByDefault="true" />

        <!-- Notification group for errors -->
        <notificationGroup displayType="BALLOON" id="ADB Idea (Errors)" isLogByDefault="true" />
    </extensions>
    <description><![CDATA[
        Adds the following ADB commands to Android Studio and Intellij:<br />
        <ul>
            <li>ADB Uninstall App</li>
            <li>ADB Kill App</li>
            <li>ADB Start App</li>
            <li>ADB Restart App</li>
            <li>ADB Clear App Data</li>
            <li>ADB Clear App Data and Restart</li>
            <li>ADB Start App With Debugger</li>
            <li>ADB Restart App With Debugger</li>
            <li>ADB Grant/Revoke Permissions</li>
            <li>ADB Enable/Disable Wi-Fi</li>
            <li>ADB Enable/Disable Mobile Data</li>
        </ul>
        <br />
        There are two basic ways to invoke a command:
        <ul>
            <li>Through the Tools->Android->ADB Idea menu</li>
            <li>By searching for "ADB" in "Find Actions" (osx: Cmd+Shift+A, windows/linux: Ctrl+Alt+Shift+A)</li>
        </ul>
        ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.androidstudio</depends>
    <depends>org.jetbrains.android</depends>

    <actions>
        <group description="ADB Idea" id="AdbIdea" popup="true" text="_ADB Idea">
            <action class="io.github.raghavsatyadev.adbidea.action.QuickListAction"
                    description="List all the adb idea operations in a popup"
                    id="io.github.raghavsatyadev.adbidea.action.AdbIdeaQuickList"
                    text="ADB Operations Popup...">
                <keyboard-shortcut first-keystroke="shift ctrl A" keymap="Mac OS X" />
                <keyboard-shortcut first-keystroke="shift ctrl A" keymap="Mac OS X 10.5+" />
                <keyboard-shortcut first-keystroke="shift ctrl alt A" keymap="$default" />
            </action>
            <separator />

            <action class="io.github.raghavsatyadev.adbidea.action.RevokePermissionsAction"
                    description="Revoking the runtime permissions of the current application"
                    id="io.github.raghavsatyadev.adbidea.action.RevokePermissionsAction"
                    text="ADB Revoke Permissions" />

            <action class="io.github.raghavsatyadev.adbidea.action.RevokePermissionsAndRestartAction"
                    description="Revoking the runtime permissions of the current application and restarts it"
                    id="io.github.raghavsatyadev.adbidea.action.RevokePermissionsAndRestartAction"
                    text="ADB Revoke Permissions and Restart" />

            <action class="io.github.raghavsatyadev.adbidea.action.GrantPermissionsAction"
                    description="Granting the runtime permissions of the current application"
                    id="io.github.raghavsatyadev.adbidea.action.GrantPermissionsAction"
                    text="ADB Grant Permissions" />

            <action class="io.github.raghavsatyadev.adbidea.action.UninstallAction"
                    description="Uninstalls the current application"
                    id="io.github.raghavsatyadev.adbidea.action.UninstallAction"
                    text="ADB Uninstall App" />

            <action class="io.github.raghavsatyadev.adbidea.action.KillAction"
                    description="Kills the current application"
                    id="io.github.raghavsatyadev.adbidea.action.KillAction" text="ADB Kill App"/>
            <action class="io.github.raghavsatyadev.adbidea.action.StartAction"
                    description="Starts the current application"
                    id="io.github.raghavsatyadev.adbidea.action.StartAction" text="ADB Start App"/>
            <action class="io.github.raghavsatyadev.adbidea.action.RestartAction"
                    description="Restarts the current application"
                    id="io.github.raghavsatyadev.adbidea.action.RestartAction" text="ADB Restart App"/>
            <action class="io.github.raghavsatyadev.adbidea.action.ClearDataAction"
                    description="Clears the private storage of the app"
                    id="io.github.raghavsatyadev.adbidea.action.ClearDataAction"
                    text="ADB Clear App Data" />
            <action class="io.github.raghavsatyadev.adbidea.action.ClearDataAndRestartAction"
                    description="Clears the private storage of the app and restarts it"
                    id="io.github.raghavsatyadev.adbidea.action.ClearDataAndRestartAction"
                    text="ADB Clear App Data and Restart" />
            <action class="io.github.raghavsatyadev.adbidea.action.StartWithDebuggerAction"
                    description="Starts the current application and attach the debugger"
                    id="io.github.raghavsatyadev.adbidea.action.StartWithDebuggerAction"
                    text="ADB Start App With Debugger" />

            <action class="io.github.raghavsatyadev.adbidea.action.RestartWithDebuggerAction"
                    description="Restarts the current application and attach the debugger"
                    id="io.github.raghavsatyadev.adbidea.action.RestartWithDebuggerAction"
                    text="ADB Restart App With Debugger" />

            <action class="io.github.raghavsatyadev.adbidea.action.ClearDataAndRestartWithDebuggerAction"
                    description="Clears the private storage of the app and restarts it, and attach the debugger"
                    id="io.github.raghavsatyadev.adbidea.action.ClearDataAndRestartWithDebuggerAction"
                    text="ADB Clear App Data and Restart App With Debugger" />
            <add-to-group anchor="first" group-id="AndroidToolsGroup" />
            <separator />

            <action class="io.github.raghavsatyadev.adbidea.action.EnableWifiAction"
                    description="Enable Wi-Fi on device or emulator"
                    id="io.github.raghavsatyadev.adbidea.action.EnableWifiAction"
                    text="ADB Enable Wi-Fi" />

            <action class="io.github.raghavsatyadev.adbidea.action.DisableWifiAction"
                    description="Disable Wi-Fi on device or emulator"
                    id="io.github.raghavsatyadev.adbidea.action.DisableWifiAction"
                    text="ADB Disable Wi-Fi" />

            <action class="io.github.raghavsatyadev.adbidea.action.EnableMobileAction"
                    description="Enable mobile data on device or emulator"
                    id="io.github.raghavsatyadev.adbidea.action.EnableMobileAction"
                    text="ADB Enable Mobile Data" />

            <action class="io.github.raghavsatyadev.adbidea.action.DisableMobileAction"
                    description="Disable mobile data on device or emulator"
                    id="io.github.raghavsatyadev.adbidea.action.DisableMobileAction"
                    text="ADB Disable Mobile Data" />

        </group>
    </actions>
</idea-plugin>
